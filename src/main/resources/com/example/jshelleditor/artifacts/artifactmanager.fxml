<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.14-internal"
         fx:controller="com.example.jshelleditor.artifacts.ArtifactManagerController" prefHeight="500.0"
         prefWidth="600.0">
    <tabs>
        <Tab closable="false" text="Add Dependencies">
            <content>
                <VBox>
                    <children>
                        <VBox spacing="10.0">
                            <fx:define>
                                <ToggleGroup fx:id="group"/>
                            </fx:define>
                            <children>
                                <HBox spacing="10.0">
                                    <RadioButton fx:id="toggleSearch" selected="true" text="Search for dependencies"
                                                 toggleGroup="$group">
                                        <toggleGroup>
                                            <ToggleGroup/>
                                        </toggleGroup>
                                    </RadioButton>
                                    <TextField fx:id="dependencyQuery" prefHeight="30.0" prefWidth="350.0"
                                               promptText="&lt;groupId&gt;:&lt;artifactId&gt;[:&lt;extension&gt;[:&lt;classifier&gt;]]:&lt;version&gt;">
                                        <tooltip>
                                            <Tooltip
                                                    text="&lt;groupId&gt;:&lt;artifactId&gt;[:&lt;extension&gt;[:&lt;classifier&gt;]]:&lt;version&gt;"/>
                                        </tooltip>
                                    </TextField>
                                    <Button fx:id="dependencyResolver" onAction="#resolveDependencies" prefHeight="30.0"
                                            prefWidth="45.0">
                                        <graphic>
                                            <FontIcon iconLiteral="fas-search" iconSize="15"/>
                                        </graphic>
                                    </Button>
                                </HBox>
                                <HBox spacing="10.0">
                                    <RadioButton fx:id="toggleJarFinder" text="Pick JAR file" toggleGroup="$group"/>
                                    <Button fx:id="jarFinder" onAction="#pickJar" text="Pick JAR file"/>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="20.0" top="20.0"/>
                            </padding>
                        </VBox>
                        <ListView fx:id="artifactView"/>
                        <HBox spacing="10d">
                            <Button fx:id="removeArtifactBtn" visible="false" onAction="#removeArtifact">
                                <graphic>
                                    <FontIcon iconLiteral="fas-minus" iconSize="15"/>
                                </graphic>
                            </Button>
                            <Button fx:id="loadArtifacts" mnemonicParsing="false" text="Load artifacts" visible="false">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="20.0" top="10.0"/>
                                </VBox.margin>
                            </Button>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="20.0" top="20.0"/>
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </Tab>
        <Tab closable="false" text="Manage imports">
            <content>
                <VBox>
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <HBox spacing="10.0">
                                    <TextField fx:id="importStmt" prefHeight="30.0" prefWidth="350.0"/>
                                    <Button fx:id="addImportBtn" onAction="#addImport" prefHeight="30.0"
                                            prefWidth="45.0">
                                        <graphic>
                                            <FontIcon iconLiteral="fas-plus" iconSize="15"/>
                                        </graphic>
                                    </Button>
                                    <Button fx:id="removeImportBtn" onAction="#removeImport" visible="false"
                                            prefHeight="30.0" prefWidth="45.0">
                                        <graphic>
                                            <FontIcon iconLiteral="fas-minus" iconSize="15"/>
                                        </graphic>
                                    </Button>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="20.0" top="20.0"/>
                            </padding>
                        </VBox>
                        <ListView fx:id="importView"/>
                        <Button fx:id="saveImports" text="Save imports">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="20.0" top="10.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
